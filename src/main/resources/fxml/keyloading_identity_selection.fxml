<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cryptomator.ui.keyloading.IdentitySelectionController"
      spacing="20"
      styleClass="root">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label fx:id="titleLabel" styleClass="header" text="%unlock.selectIdentity.title" wrapText="true"/>

    <VBox spacing="10">
        <Label text="%unlock.selectIdentity.instruction"/>
        <ComboBox fx:id="identityComboBox" maxWidth="Infinity" promptText="%unlock.selectIdentity.prompt"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%generic.button.cancel" onAction="#onCancel" cancelButton="true"/>
        <Button text="%unlock.selectIdentity.continueBtn" onAction="#onContinue" defaultButton="true" styleClass="button-primary"/>
    </HBox>
</VBox>
