<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cryptomator.ui.keyloading.IdentitySelectionController"
      spacing="20"
      styleClass="root">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label fx:id="titleLabel" styleClass="header" text="Select Identity" wrapText="true"/>

    <VBox spacing="10">
        <Label text="Choose which identity to unlock:"/>
        <ComboBox fx:id="identityComboBox" maxWidth="Infinity" promptText="Select an identity"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel" cancelButton="true"/>
        <Button text="Continue" onAction="#onContinue" defaultButton="true" styleClass="button-primary"/>
    </HBox>
</VBox>
